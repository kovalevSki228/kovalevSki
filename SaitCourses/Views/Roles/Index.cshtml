@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>List role</h2>
<table class="table">
    @foreach(var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="btn btn-outline-primary" asp-action="Create">Add role</a>
<a class="btn btn-outline-primary" asp-action="UserList">User List</a>